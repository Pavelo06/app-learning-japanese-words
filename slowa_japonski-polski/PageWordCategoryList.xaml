<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="slowa_japonski_polski.PageWordCategoryList"
             Title="PageWordCategoryList">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="10">
        
        <Label 
            Text="All word categories"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="20"/>
        
        <!--few categories with word sets-->
        <Button Text="Animals A" Clicked="buttonChoosedWordSet"/>
        <Button Text="Animals B" Clicked="buttonChoosedWordSet"/>
        <Button Text="Human Face Parts" Clicked="buttonChoosedWordSet"/>
        <Button Text="Human Body Parts" Clicked="buttonChoosedWordSet"/>
        <Button Text="Fruits" Clicked="buttonChoosedWordSet"/>
        <Button Text="Vegetables" Clicked="buttonChoosedWordSet"/>
    </VerticalStackLayout>
</ContentPage>